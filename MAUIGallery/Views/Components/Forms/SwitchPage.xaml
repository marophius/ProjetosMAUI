<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIGallery.Views.Components.Forms.SwitchPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SwitchPage">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" />
        <Switch x:Name="SwitchTest" HorizontalOptions="Start" />
        <Label x:Name="LblStatus" IsVisible="false" />
    </VerticalStackLayout>
</ContentPage>