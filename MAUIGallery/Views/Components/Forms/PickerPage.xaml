<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIGallery.Views.Components.Forms.PickerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="PickerPage">
    <VerticalStackLayout>
        <Picker
            x:Name="PickerTest"
            Title="Marcas"
            TitleColor="Red">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Fiat</x:String>
                    <x:String>Renault</x:String>
                    <x:String>Peugeot</x:String>
                    <x:String>Chevrolet</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Label x:Name="LblValue" />
    </VerticalStackLayout>
</ContentPage>