<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIGallery.Views.Layouts.GridLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="GridLayoutPage">
    <Grid
        Margin="20"
        BackgroundColor="AliceBlue"
        ColumnDefinitions="100, Auto, *, *"
        ColumnSpacing="10"
        RowDefinitions="50, 100, Auto"
        RowSpacing="10">

        <BoxView Color="MediumAquamarine" />
        <Label
            HorizontalOptions="Center"
            Text="Olá mundo!"
            VerticalOptions="Center" />
        <BoxView
            Grid.Row="0"
            Grid.Column="1"
            WidthRequest="50"
            Color="ForestGreen" />
        <BoxView
            Grid.RowSpan="2"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Color="Aquamarine" />
        <Label
            Grid.RowSpan="2"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            HorizontalOptions="Center"
            Text="Olá Mundo!"
            TextColor="White"
            VerticalOptions="Center" />
        <BoxView Grid.Row="1" Color="Orange" />
        <BoxView
            Grid.Row="1"
            Grid.Column="1"
            Color="Red" />
        <BoxView
            Grid.Row="2"
            Grid.ColumnSpan="4"
            HeightRequest="10"
            Color="Black" />
    </Grid>
</ContentPage>