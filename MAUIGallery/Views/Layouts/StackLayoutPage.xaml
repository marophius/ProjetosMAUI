<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIGallery.Views.Layouts.StackLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StackLayoutPage">
    <VerticalStackLayout
        Margin="20"
        Padding="20"
        BackgroundColor="AliceBlue"
        Spacing="10">
        <Label Text="Olá mundo!" />

        <HorizontalStackLayout Spacing="10">
            <Button HorizontalOptions="Start" Text="Olá mundo 1!" />
            <Button HorizontalOptions="Start" Text="Olá mundo 2!" />
        </HorizontalStackLayout>

        <VerticalStackLayout>
            <Label Text="Olá mundo 1!" />
            <Label Text="Olá mundo 2!" />
        </VerticalStackLayout>

        <HorizontalStackLayout>
            <Label Text="Olá mundo 1!" />
            <Label Text="Olá mundo 2!" />
        </HorizontalStackLayout>
        <Button
            HeightRequest="100"
            HorizontalOptions="Center"
            Text="Olá mundo!"
            WidthRequest="200" />
    </VerticalStackLayout>
</ContentPage>