<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIGallery.Views.Styles.AppThemeBinding"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AppThemeBinding"
    BackgroundColor="{AppThemeBinding Light={StaticResource Blue100Accent},
                                      Dark={StaticResource Blue300Accent},
                                      Default={StaticResource Blue200Accent}}">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>