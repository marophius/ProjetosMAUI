<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIGallery.Views.Styles.StaticDynamicResource"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StaticDynamicResource">
    <ContentPage.Resources>
        <Color x:Key="TitleColor">#FF0000</Color>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label
            Padding="20"
            FontSize="24"
            HorizontalOptions="Center"
            Text="Welcome to .NET MAUI!"
            TextColor="{StaticResource TitleColor}" />
        <Label Text="Paragraph" TextColor="{DynamicResource TitleColor}" />
        <Button Clicked="Button_Clicked" Text="Alterar" />
    </VerticalStackLayout>
</ContentPage>