<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIGallery.Views.Menu"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Menu"
    BackgroundColor="#F3F3F3">
    <CollectionView x:Name="MenuCollection" IsGrouped="True">
        <CollectionView.Header>
            <VerticalStackLayout Padding="20,0" Spacing="10">
                <Label
                    Margin="30"
                    FontFamily="OpenSansSemibold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="MAUI - Gallery"
                    VerticalOptions="Center" />
                <Label Text="Home">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnInicioTap" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Extra">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnExtraTap" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Credits">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCreditsTap" />
                    </Label.GestureRecognizers>
                </Label>
            </VerticalStackLayout>
        </CollectionView.Header>
        <CollectionView.GroupHeaderTemplate>
            <DataTemplate>
                <Label
                    Margin="20,5"
                    FontAttributes="Bold"
                    Text="{Binding Name}" />
            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Padding="40,10,20,10">
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer CommandParameter="{Binding .}" Tapped="OnTapComponent" />
                    </VerticalStackLayout.GestureRecognizers>
                    <Label FontAttributes="Bold" Text="{Binding Title}" />
                    <Label Text="{Binding Description}" TextColor="{StaticResource Gray500}" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>