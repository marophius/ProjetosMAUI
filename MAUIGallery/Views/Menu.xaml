<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIGallery.Views.Menu"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Menu"
    Padding="20"
    BackgroundColor="#F3F3F3">
    <ScrollView>
        <VerticalStackLayout Spacing="10">
            <Label
                Margin="30"
                FontFamily="OpenSansSemibold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="MAUI - Gallery"
                VerticalOptions="Center" />
            <Label Text="Home">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnInicioTap" />
                </Label.GestureRecognizers>
            </Label>
            <Label Text="Extra">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnExtraTap" />
                </Label.GestureRecognizers>
            </Label>
            <Label Text="Credits">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCreditsTap" />
                </Label.GestureRecognizers>
            </Label>

            <VerticalStackLayout
                x:Name="MenuContainer"
                Margin="0,10,0,0"
                Spacing="10" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>