<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUIGallery.Views.Lists.TableViewPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="TableViewPage">
    <VerticalStackLayout>
        <TableView Intent="Settings" RowHeight="20">
            <TableSection Title="Segurança">
                <EntryCell Label="Proteger o App com senha" />
            </TableSection>
            <TableSection Title="Backup">
                <SwitchCell Text="Habilitar Backup" />
                <SwitchCell Text="Backup diário" />
                <SwitchCell Text="Backup semanal" />
                <SwitchCell Text="Backup mensal" />
            </TableSection>
        </TableView>
    </VerticalStackLayout>
</ContentPage>